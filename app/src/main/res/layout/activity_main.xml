<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#dfe1e9">
        <LinearLayout
            android:id="@+id/question_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/question_pic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/wenda"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/question_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:text="问答"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/main_pic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/home"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/main_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:text="主页"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/study_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/study_pic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/luntan"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/study_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:text="论坛"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/person_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/person_pic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/my3"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/person_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#b37127"
                android:text="我的"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

